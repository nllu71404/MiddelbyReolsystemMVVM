<Window x:Class="MiddelbyReolsystemMVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Beige">

    <Grid>
        <!-- Top-sektion -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" >
            <Button Content="Reoloversigt" Click="OpenRackOverview_Button_Click" Width="190" Height="50" Margin="10" FontWeight="Bold" FontSize="16"/>
            <Button Content="Administrér reollejere" Click="OpenAdminRenterView_Button_Click" Width="190" Height="50" Margin="10" FontWeight="Bold" FontSize="16"/>
            <Button Content="Administrér reoler" Click="OpenAdminRackView_Button_Click" Width="190" Height="50" Margin="10" FontWeight="Bold" FontSize="16"/>
        </StackPanel>
        <Image Source="/Images/MiddelbyLogo.png" Width="450" Height="450" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>
        <Grid>
            <!-- Frame til navigation -->
            <Frame x:Name="MainFrame" Margin="0,100,0,0" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
