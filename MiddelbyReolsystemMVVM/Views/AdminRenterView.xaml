<Window x:Class="MiddelbyReolsystemMVVM.Views.AdminRenterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AdminRenterView" Height="600" Width="900"
        Background="Beige">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Topbar -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
            <Button Content="Reoloversigt"
                    Width="160" Height="36" Padding="16,8" Margin="6,0"
                    Background="LightPink"
                    Command="{Binding GoRackOverview}"/>

            <Button Content="Administrér reollejere"
                    Width="160" Height="36" Padding="16,8" Margin="6,0"
                    Background="LightGray"
                    IsEnabled="False"/>

            <Button Content="Administrér reoler"
                    Width="160" Height="36" Padding="16,8" Margin="6,0"
                    Background="LightPink"
                    Command="{Binding GoAdminRack}"/>
        </StackPanel>

        <Rectangle Grid.Row="1" Height="1" Fill="Black" Margin="10,5,10,5" Grid.ColumnSpan="2"/>

        <!-- Hovedindhold -->
        <Grid Grid.Row="2" Margin="20,20,20,20" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Formular (venstre) -->
            <StackPanel Grid.Column="0" Margin="0,0,22,0">
                <TextBlock Text="Fornavn:" Margin="0,0,0,6"/>
                <TextBox Text="{Binding SelectedRenter.FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Efternavn:" Margin="0,6,0,6"/>
                <TextBox Text="{Binding SelectedRenter.LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Email:" Margin="0,6,0,6"/>
                <TextBox Text="{Binding SelectedRenter.Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Telefonnummer:" Margin="0,6,0,6"/>
                <TextBox Text="{Binding SelectedRenter.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Bankoplysninger:" Margin="0,6,0,6"/>
                <TextBox Text="{Binding SelectedRenter.BankInformation, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <CheckBox Content="Samtykkeerklæring er underskrevet"
                          IsChecked="{Binding SelectedRenter.ConsentGiven}"
                          Margin="0,10,0,0"/>

                <Button Content="Gem"
                        Width="100" Margin="0,20,0,0" HorizontalAlignment="Left"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>

            <!-- Liste + knapper (højre) -->
            <StackPanel Grid.Column="1">
                <ListBox Height="260" Margin="0,0,0,16"
                         ItemsSource="{Binding Renters}"
                         SelectedItem="{Binding SelectedRenter}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding FirstName}" />
                                <Run Text=" " />
                                <Run Text="{Binding LastName}" />
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Opret"   Width="80" Margin="0,0,12,0"
                            Command="{Binding NewCommand}"/>
                    <Button Content="Rediger" Width="80" Margin="0,0,12,0"
                            Command="{Binding EditCommand}"/>
                    <Button Content="Slet"    Width="80"
                            Command="{Binding DeleteCommand}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Fejlbesked nederst -->
        <TextBox Grid.Row="3"
                 Width="320" Height="28"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 Text="{Binding ErrorMessage}"
                 IsReadOnly="True"
                 Background="White" Foreground="Black"
                 BorderBrush="DarkGreen" BorderThickness="1"
                 TextAlignment="Center" Grid.Column="1"/>
    </Grid>
</Window>