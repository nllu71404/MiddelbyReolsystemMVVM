<Window x:Class="MiddelbyReolsystemMVVM.Views.AdminRenterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AdminRenterView" Height="650" Width="1100"
        MinHeight="520" MinWidth="900"
        Background="Bisque"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <!-- Standard størrelse -->
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#FFFFCCD4"/>
            <!-- default baggrund -->
            <Setter Property="Foreground" Value="DarkRed"/>
            <!-- Custom template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                      Background="{TemplateBinding Background}"
                      CornerRadius="25"
                      BorderBrush="DarkRed"
                      BorderThickness="2"
                      Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFCC99A0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>


        <!-- Topbar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" >
            <Button Content="Reoloversigt" Click="OpenRackOverview_Button_Click" Width="190" Height="50" Margin="10" FontWeight="Bold" FontSize="16"/>
            <Button Content="Administrér reollejere" Background="#FFCC99A0" IsEnabled="False"  Width="190" Height="50" Margin="10" FontWeight="Bold" FontSize="16"/>
            <Button Content="Administrér reoler" Click="OpenAdminRackView_Button_Click" Width="190" Height="50" Margin="10" FontWeight="Bold" FontSize="16"/>
        </StackPanel>

        <!-- Hovedindhold -->
        <Grid Grid.Row="2" Margin="20,100,20,20" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Formular (venstre) -->
            <StackPanel Grid.Column="0" Margin="0,0,22,0">
                <TextBlock Text="Fornavn:" Margin="0,0,0,6"/>
                <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Efternavn:" Margin="0,6,0,6"/>
                <TextBox Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Email:" Margin="0,6,0,6"/>
                <TextBox Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Telefonnummer:" Margin="0,6,0,6"/>
                <TextBox Text="{Binding PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Bankoplysninger:" Margin="0,6,0,6"/>
                <TextBox Text="{Binding BankInformation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <CheckBox Content="Samtykkeerklæring er underskrevet"
                          IsChecked="{Binding ConsentGiven, Mode=TwoWay}"
                          Margin="0,50,0,0"/>

                <Button Content="Gem"
                        Width="100" Margin="0,10,0,0" HorizontalAlignment="Left"
                        Command="{Binding SaveCommand}" Click="Save_Button_Click"/>
            </StackPanel>

            <!-- Liste + knapper (højre) -->
            <StackPanel Grid.Column="1">
                <ListBox Height="416" Margin="0,20,0,16"
                         ItemsSource="{Binding Renters}"
                         SelectedItem="{Binding SelectedRenter}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding FirstName}" />
                                <Run Text=" " />
                                <Run Text="{Binding LastName}" />
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Opret"   Width="80" Margin="0,0,12,0" Click="New_Button_Click"/>
                    <Button Content="Rediger" Width="80" Margin="0,0,12,0" Click="Edit_Button_Click"/>
                    <Button Content="Slet"    Width="80" Click="Delete_Button_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Fejlbesked nederst -->
        <TextBox
                 Width="320" Height="28"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Text="{Binding ErrorMessage, Mode=OneWay}"
                 IsReadOnly="True"
                 Background="White" Foreground="Black"
                 BorderBrush="DarkRed" BorderThickness="1"
                 TextAlignment="Center" Margin="20,573,0,0"/>
    </Grid>
</Window>